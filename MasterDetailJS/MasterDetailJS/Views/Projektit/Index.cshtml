@model IEnumerable<MasterDetailJS.Models.Projektit>

@{
    ViewBag.Title = "Index";
}

<h2>Projektit</h2>

<p>
    @Html.ActionLink("Lisää uusi", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjektiId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Nimi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjektiId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Nimi)
            </td>
            <td>
                @Html.ActionLink("Muokkaa", "Edit", new { id = item.ProjektiId }) |
                @Html.ActionLink("Poista", "Delete", new { id = item.ProjektiId })
            </td>
        </tr>

    }

</table>
